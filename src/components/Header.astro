---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 border-b border-void-700 bg-void-950/90 backdrop-blur-lg">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <!-- Name / Home -->
      <a href="/" class="group flex items-center gap-2">
        <span class="font-heading font-bold text-lg text-ash-100 group-hover:text-ember-400 transition-colors">
          E.Huang
        </span>
        <span class="hidden sm:inline font-mono text-[10px] text-ash-500 tracking-widest">//</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-6">
        <a href="#projects" class="font-mono text-sm text-ash-400 hover:text-ember-400 transition-colors">
          projects
        </a>
        <ThemeToggle />
        <span class="text-void-600">|</span>
        <a
          href="https://github.com/evanqhuang"
          target="_blank"
          rel="noopener noreferrer"
          class="text-ash-400 hover:text-ember-400 transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </nav>

      <!-- Mobile hamburger -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-ash-400 hover:text-ember-400 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-3 mt-2 pt-3 border-t border-void-700">
        <a href="#projects" class="font-mono text-sm text-ash-400 hover:text-ember-400 transition-colors">
          projects
        </a>
        <a
          href="https://github.com/evanqhuang"
          target="_blank"
          rel="noopener noreferrer"
          class="font-mono text-sm text-ash-400 hover:text-ember-400 transition-colors"
        >
          github
        </a>
        <div class="flex items-center">
          <ThemeToggle />
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
