<button
  data-theme-toggle
  class="p-2 rounded-sm transition-colors"
  style="color: var(--text-muted);"
  aria-label="Toggle theme"
  title="Toggle light/dark mode"
>
  <!-- Sun icon (visible in dark mode - click to go light) -->
  <svg
    data-theme-icon="sun"
    class="w-5 h-5 hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
  <!-- Moon icon (visible in light mode - click to go dark) -->
  <svg
    data-theme-icon="moon"
    class="w-5 h-5 hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script>
  const buttons = document.querySelectorAll('[data-theme-toggle]');
  const sunIcons = document.querySelectorAll('[data-theme-icon="sun"]');
  const moonIcons = document.querySelectorAll('[data-theme-icon="moon"]');
  const html = document.documentElement;

  function getEffectiveTheme(): 'light' | 'dark' {
    const stored = localStorage.getItem('theme');
    if (stored === 'light') return 'light';
    if (stored === 'dark') return 'dark';
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }

  function applyTheme(theme: 'light' | 'dark' | 'system') {
    html.classList.remove('light', 'dark');
    if (theme === 'dark') {
      html.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    } else if (theme === 'light') {
      html.classList.add('light');
      localStorage.setItem('theme', 'light');
    } else {
      localStorage.removeItem('theme');
    }
    updateIcons();
  }

  function updateIcons() {
    const effective = getEffectiveTheme();
    sunIcons.forEach(icon => icon.classList.toggle('hidden', effective !== 'dark'));
    moonIcons.forEach(icon => icon.classList.toggle('hidden', effective !== 'light'));
  }

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const stored = localStorage.getItem('theme');
      if (!stored) {
        applyTheme('light');
      } else if (stored === 'light') {
        applyTheme('dark');
      } else {
        applyTheme('system');
      }
    });
  });

  updateIcons();

  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    if (!localStorage.getItem('theme')) {
      updateIcons();
    }
  });
</script>
