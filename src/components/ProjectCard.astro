---
interface Props {
  project: {
    data: {
      title: string;
      description: string;
      tech: string[];
      category: string;
      github?: string;
      url?: string;
      featured: boolean;
      order: number;
    };
  };
}

const { project } = Astro.props;
const { title, description, tech, category, github, url, featured } = project.data;
const cardLink = url || github || null;
---

<article class={`card card-hover rounded-sm p-5 sm:p-6 flex flex-col h-full group relative ${cardLink ? 'cursor-pointer' : ''}`}>
  <!-- Featured indicator -->
  {featured && (
    <div class="absolute top-0 right-0 w-0 h-0 border-t-[24px] border-t-ember-500/80 border-l-[24px] border-l-transparent"></div>
  )}

  <!-- Header: category + title -->
  <div class="mb-3">
    <span class="mono-label text-[10px]">{category}</span>
    <h3 class="text-lg font-heading font-semibold text-ash-100 mt-1 group-hover:text-ember-400 transition-colors">
      {cardLink ? (
        <a href={cardLink} target="_blank" rel="noopener noreferrer" class="stretched-link">{title}</a>
      ) : title}
    </h3>
  </div>

  <!-- Description -->
  <p class="text-sm text-ash-400 leading-relaxed line-clamp-3 flex-grow">
    {description}
  </p>

  <!-- Tech tags -->
  <div class="flex flex-wrap gap-1.5 mt-4">
    {tech.slice(0, 5).map((t) => (
      <span class="badge">{t}</span>
    ))}
    {tech.length > 5 && (
      <span class="badge">+{tech.length - 5}</span>
    )}
  </div>

  <!-- Links -->
  <div class="flex items-center gap-3 mt-4 pt-4 border-t border-void-700 relative z-10">
    {github && (
      <a
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-ash-500 hover:text-ember-400 transition-colors"
        aria-label={`${title} on GitHub`}
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    )}
    {url && (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-ash-500 hover:text-ember-400 transition-colors"
        aria-label={`Visit ${title}`}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    )}
    {!github && !url && (
      <span class="font-mono text-[10px] text-ash-500">private</span>
    )}
  </div>
</article>
